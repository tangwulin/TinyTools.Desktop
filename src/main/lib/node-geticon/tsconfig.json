{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
